package test;

import java.util.Scanner;

public class jumsu {

	public static void main(String[] args) {
		Scanner a = new Scanner(System.in);
		
		System.out.println("점수를 입력하세요");
		
		int b = a.nextInt();
		int c = a.nextInt();
		int d = a.nextInt();
		int e = a.nextInt();
		int f = a.nextInt();
		
		System.out.println("총점 : " + (b+c+d+e+f));
		System.out.println("평균 : " + (double)((b+c+d+e+f)/5));
		
		if(b>c) {
			System.out.println("최고점수 :" + b);
		}
		
		
		
		
		
		
		
		
		

	}

}
